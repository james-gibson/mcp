{
  "name": "mcp-cli",
  "version": "0.1.0",
  "module": "true",
  "description": "CLI for creating Model Context Protocol servers",
  "bin": "dist/main.js",
  "main": "src/main.ts",
  "scripts": {
    "claude-install": "npx claude mcp remove mcp-cli; npx claude mcp add mcp-cli 'node /home/james/src/james-gibson/mcp/mcp-cli create-server'",
    "ins": "npx claude mcp remove dev; npx claude mcp add dev 'npx  -y https://github.com/james-gibson/mcp/releases/download/v0.1.20/mcp-cli-v0.1.20.tar.gz create-server'",
    "build": "nest build --tsc && tree dist/ && tree src/",
    "hot": "nest build --watch",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "cli",
    "nestjs"
  ],
  "author": "",
  "license": "AGPL-3.0",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.15.1",
    "@nestjs/common": "^10.4.19",
    "@nestjs/core": "^10.4.19",
    "@nestjs/platform-express": "^10.4.20",
    "commander": "^11.1.0",
    "express": "^5.1.0",
    "graphql": "^16.11.0",
    "reflect-metadata": "^0.1.14",
    "rxjs": "^7.8.2",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.10",
    "@nestjs/schematics": "^10.2.3",
    "@nestjs/testing": "^10.4.19",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.19.8",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.1",
    "jest": "^29.7.0",
    "source-map-support": "^0.5.21",
    "ts-jest": "^29.4.0",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
